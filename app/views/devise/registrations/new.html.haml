.min-h-screen.flex.items-center.justify-center.bg-white.px-4
  .w-full.max-w-md
    .text-center.mb-12
      %h1.text-4xl.font-bold.text-black.tracking-tight.mb-4
        SIGN UP
      %p.text-lg.text-gray-600.font-light
        Create your learning account

    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-8" }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .space-y-6
        .field
          = f.label :email, class: "block text-sm font-medium text-black mb-2 uppercase tracking-wide"
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-0 py-3 text-lg border-0 border-b-2 border-gray-200 focus:border-black focus:outline-none bg-transparent placeholder-gray-400"

        .field
          = f.label :password, class: "block text-sm font-medium text-black mb-2 uppercase tracking-wide"
          - if @minimum_password_length
            %p.text-xs.text-gray-500.mb-2.font-light
              = t('devise.shared.minimum_password_length', count: @minimum_password_length)
          = f.password_field :password, autocomplete: "new-password", class: "w-full px-0 py-3 text-lg border-0 border-b-2 border-gray-200 focus:border-black focus:outline-none bg-transparent placeholder-gray-400"

        .field
          = f.label :password_confirmation, class: "block text-sm font-medium text-black mb-2 uppercase tracking-wide"
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-0 py-3 text-lg border-0 border-b-2 border-gray-200 focus:border-black focus:outline-none bg-transparent placeholder-gray-400"

      .pt-4
        = f.submit t('.sign_up'), class: "w-full bg-black text-white py-4 text-lg font-medium uppercase tracking-wide hover:bg-gray-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"

    .mt-12.text-center
      = render "devise/shared/links"

.min-h-screen.flex.items-center.justify-center.bg-white.px-4
  .w-full.max-w-md
    .text-center.mb-12
      %h1.text-4xl.font-bold.text-black.tracking-tight.mb-4.uppercase
        = t('.sign_in')
      %p.text-lg.text-gray-600.font-light
        = t('.access_your_learning_dashboard')

    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-8" }) do |f|
      .space-y-6
        .field
          = f.label :email, class: "block text-sm font-medium text-black mb-2 uppercase tracking-wide"
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-0 py-3 text-lg border-0 border-b-2 border-gray-200 focus:border-black focus:outline-none bg-transparent placeholder-gray-400"

        .field
          = f.label :password, class: "block text-sm font-medium text-black mb-2 uppercase tracking-wide"
          = f.password_field :password, autocomplete: "current-password", class: "w-full px-0 py-3 text-lg border-0 border-b-2 border-gray-200 focus:border-black focus:outline-none bg-transparent placeholder-gray-400"

        - if devise_mapping.rememberable?
          .field.flex.items-center.space-x-3
            = f.check_box :remember_me, class: "w-4 h-4 text-black border-2 border-gray-300 focus:ring-0 focus:border-black"
            = f.label :remember_me, class: "text-sm text-gray-600 font-medium"

      .pt-4
        = f.submit t('.sign_in'), class: "w-full bg-black text-white py-4 text-lg font-medium uppercase tracking-wide hover:bg-gray-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"

    .mt-12.text-center
      = render "devise/shared/links"
